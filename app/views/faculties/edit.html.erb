
<div class= "row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit your profile</h1>
    <%= form_for(@faculty) do |f| %>
      <%= render 'form' %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="field">
        <%= f.label :dept %><br>
        <%= f.text_field :dept, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :desc%><br>
        <%= f.text_area :desc,class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :phone_no %><br>
        <%= f.text_field :phone_no, class: 'form-control'%>
      </div>
      <div class="field">
        <%= f.label :uin %><br>
        <%= f.text_field :uin, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :office %><br>
        <%= f.text_area :office ,class: 'form-control' %>
      </div>
      
      <div class ="field">
        <%= f.label :password %> <br>
        <%= f.password_field :password, class: 'form-control'%>
      </div>
      
      <div class ="field">
        <%= f.label :password_confirmation %> <br>
        <%= f.password_field :password_confirmation ,class: 'form-control'%>
      </div>
      <div class="actions">
        <%= f.submit 'Create Account' ,class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to 'Back', faculties_path %>
  </div>
</div>


