<p id="notice"><%= notice %></p>

<h1>Listing Publications</h1>
<%=link_to "Sort by name",{:controller => 'publications'  }%>
<table>
  <thead>
    <tr>
      <th> Name   </th>
      <th>   </th>
      <th> Abstract    </th>
      <th>   </th>
      <th> Keywords    </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.name %></td>
        <td></td>
        <td><%= publication.abstract %></td>
        <td></td>
        <td><%= publication.keywords %></td>
        <td><%= link_to 'Show', publication %></td>
        <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
        <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

